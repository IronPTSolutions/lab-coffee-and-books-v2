<div id="places-form">
  {{#if errors}}
  <div class="alert alert-danger" role="alert">
    review the form data
  </div>
  {{/if}}

  <div class="row">
    <div class="col">
  {{#if place.isNew}}
    <form action="/places" method="POST">
  {{else}}
    <form action="/places/{{place._id}}" method="POST">
  {{/if}}

    <div class="form-group">
      <label>place name</label>
      <input type="text" class="form-control {{#if errors.name }}is-invalid{{/if}}" name="name" value="{{place.name}}"
        placeholder="Enter place name">

      {{#if errors.name }}
      <div class="invalid-feedback">
        {{errors.name}}
      </div>
      {{/if}}
    </div>

   <div class="form-group">
      <label>Main Category</label>

      <select name="type" class="form-control">
          <option value="coffeshop">Coffee Shop</option>
          <option value="bookstore">Book Store</option>
      </select>
    </div>

